<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundgradient1"

    >

    <TextView
        android:id="@+id/textView3"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="56dp"
        android:layout_marginTop="15dp"
        android:alpha="0.7"
        android:text="@string/profile"
        android:textColor="#FFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <ImageView

        android:id="@+id/imageview_profile"
        android:layout_width="124dp"
        android:layout_height="133dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_man" />

    <EditText

        android:id="@+id/edittext_username"
        android:layout_width="275dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:alpha="0.5"
        android:textColorHint="#FFFF"
        android:gravity="center"
        android:background="@drawable/edittext_theme"
        android:layout_marginTop="206dp"
        android:textColor="#FFFF"
        android:hint="Username"
        android:typeface="sans" />


    <EditText

        android:id="@+id/edittext_email"
        android:layout_width="275dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="258dp"
        android:alpha="0.5"
        android:background="@drawable/edittext_theme"
        android:gravity="center"
        android:hint="@string/Email"
        android:inputType="textEmailAddress"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#FFFF"
        android:textColorHint="#FFFF" />

    <RadioGroup

        android:id="@+id/radiogroup_gender"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="311dp"
        android:orientation="horizontal">

        <RadioButton

            android:id="@+id/radiobutton_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:alpha="0.7"
            android:text="M"
            android:textColor="#FFFF"
            android:textSize="15sp" />

        <RadioButton

            android:id="@+id/radiobutton_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:alpha="0.7"
            android:text="F"
            android:textColor="#FFFF"
            android:textSize="15sp" />

    </RadioGroup>

    <Switch

        android:id="@+id/PIN_Status"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="263dp"
        android:alpha="0.7"
        android:text="Enable PIN"
        android:textColor="#FFFF"
        android:textSize="20sp" />

    <Switch

        android:id="@+id/Email_Sync"
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="219dp"
        android:textColor="#FFFF"
        android:alpha="0.7"
        android:text="Export"
        android:textSize="20sp" />

    <TextView

        android:id="@+id/Security"
        android:layout_width="219dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginBottom="159dp"
        android:alpha="0.7"
        android:text="Set Security Questions?"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#FFFF" />

    <Button
        android:id="@+id/Continue_Profile"
        android:layout_width="172dp"
        android:layout_height="61dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:alpha="0.7"
        android:background="@drawable/custombutton1"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="Continue"
        android:textColor="#FFFF"
        android:textStyle="bold" />



</RelativeLayout>